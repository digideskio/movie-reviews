<% if !user_signed_in? %>
  <div class="jumbotron">
    <h1>Your Favorite Movies Reviewed!</h1>
    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Nostrum neque, quis ipsa, pariatur delectus nam ipsam voluptatem, distinctio, quaerat qui nemo omnis amet aliquam earum quo magni iste ducimus dolores!</p>
    <%= link_to "Sign up to write a review", new_user_registration_path, class: 'btn btn-primary btn-lg'  %>
  </div>
<% end %>

<div class="row">
  <% @movies.each do |movie| %>
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
        <%= link_to image_tag(movie.image.url(:medium)), movie %>
      </div>
    </div>
  <% end %>
</div>
